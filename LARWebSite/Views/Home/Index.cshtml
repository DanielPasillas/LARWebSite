<!-- Main Index -->
@model  LARWebSite.ViewModels.IndexViewModel
@using LARWebSite.Utilerias

@{
    ViewBag.Title = "La Red ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Import carousel css -->
<link rel="stylesheet" href="~/Assets/css/flick-slider.css" media="screen">

<!-- Landing page slider  -->
@Html.Partial("indexPartialViews/_slider")
<br /><br />

<!-- Categories Partial View  -->
@Html.Partial("indexPartialViews/_indexCategoriesCarousel")
<br />

<!-- New Products -->
@Html.Partial("indexPartialViews/_indexNewProducts")
<br />

<!-- Article Gallery -->
@Html.Partial("indexPartialViews/_indexGalleryProducts")

<!-- Brands slider -->
@Html.Partial("indexPartialViews/_brands")

<!-- Import script for local carousel -->
@section scripts
{
    @Scripts.Render("~/bundles/index")
    <script src="~/Assets/js/picturefill.min.js" async></script>
    <script>
        //Set carousel settings
        $('.main-gallery').flickity({
            //
            cellAlign: 'center',
            contain: true,
            autoPlay: 6000,
            lazyLoad: 1

        });
        //When document is ready, we will set the carousel options for the components shown below.
        $(document).ready(function () {
            $("#brands-carousel").owlCarousel({
                autoPlay: 5000, //set autoPlay to 5 seconds.
                items: 5,
                itemsDesktop: [1199, 3],
                itemsDesktopSmall: [979, 3]
            });
            $("#products-carousel").owlCarousel({
                autoPlay: 2000, //set autoPlay to 3 seconds.
                items: 4,
                itemsDesktop: [500, 1],
                itemsDesktopSmall: [979, 3],
            });
        });

        //function - slide link
        //By using this funtion, we can access to the resource included in the image.
        (function () {
            'use strict';
            $(".red-slide-get-link").on("click", function () {
                try {
                    var _self = $(this);

                    window.location.href = _self.attr("data-red-link-slide");
                } catch (e) {
                    console.log("e");
                }
            });
        })();
    </script>
}