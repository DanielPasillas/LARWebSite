@model LARWebSite.Models.ContactModel

@{
    ViewBag.Title = "Contacto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Contact Header section -->
<div id="page-header" class="contact">
    <div class="container">
        <div class="page-header-content text-center">
            <div class="page-header wsub">
                <h1 class="page-title fadeInDown animated first">Contáctanos</h1>
            </div><!-- / page-header -->
            <h5>En la Red Caza y Pesca estamos para atender tus dudas e inquietudes.</h5>
        </div><!-- / page-header-content -->
    </div><!-- / container -->
</div><!-- / page-header -->
<!-- contact -->
<!-- Partial View Contact Information Section -->
@Html.Partial("contactPartialViews/_contactInformationSection")

<!-- map -->
<div id="map"></div>
<!-- / map -->
<!-- / contact -->

@section scripts
{
    <!-- Maps API section -->
    <script type="text/javascript" src="//maps.googleapis.com/maps/api/js?key=AIzaSyCTJv3ddaG1_TvhKOriI5yFu-Zu8dwcrts&sensor=true"></script>
    <script type="text/javascript">

        function initialize() {
            var map = new google.maps.Map(
                document.getElementById('map'), {
                    center: new google.maps.LatLng(21.887440, -102.298070),
                    zoom: 20,
                    mapTypeId: google.maps.MapTypeId.ROADMAP
                });

            var marker = new google.maps.Marker({
                position: new google.maps.LatLng(21.887440, -102.298070),
                map: map
            });

        }
        google.maps.event.addDomListener(window, 'load', initialize);
    </script>
    <!-- ////////////////////////////////////////////////////////////  -->

    @Scripts.Render("~/bundles/jqueryval")

    <script>
        (function () {
            $("#contactForm").submit(function (e) {
               
                if ($(this).valid()) {
                    $(".btn-form-submit").text("Enviando...");
                    $(".btn-form-submit").attr("disabled", true);
                    return true;
                } else {
                    return false;
                }
            });
        })();
    </script>
}