@model  LARWebSite.ViewModels.IndexViewModel

@{ 
    int iActive = 0;
}

<div id="header-sliders">
    <!-- slider -->
    <div id="slider" class="carousel slide">
        <div class="carousel-inner">

            @foreach (var slide in Model.Carousel)
            {
                <!-- slides -->
                string _classActive = iActive == 0 ? "active" : "";
                <div class="item @_classActive " >
                    <div class="container">
                        <img style="width:100%;height:80%;" src="~/Assets/images/slider/@slide.Imagen" />
                        <div class="carousel-caption">

                            <div class="row">
                                <div  class="col-md-12 slider-content">
                                    <h2 class="slide-title fadeInDown animated first"><span class="text-primary"></span>@slide.Title</h2>
                                    <p class="slide-text flipInX animated second">@slide.Descripcion</p>

                                    @if (slide.itHasLink == 1)
                                    {
                                        <a href="@slide.UrlResource" class="page-scroll btn btn-lg btn-primary-filled btn-pill fadeInUp animated third"><i class="lnr lnr-cart"></i> <span>Ver más</span></a>
                                    }

                                </div><!-- slider-content -->
                            </div><!-- / row -->
                        </div><!-- / carousel-caption -->
                    </div><!-- / container -->
                </div><!-- / slide 1 -->
                iActive++;
            }
        </div><!-- /carousel-inner -->
        <!-- controls -->
        <a class="left carousel-control" href="#slider" data-slide="prev"><span class="lnr lnr-chevron-left"></span></a>
        <a class="right carousel-control" href="#slider" data-slide="next"><span class="lnr lnr-chevron-right"></span></a>
        <!-- / controls -->
    </div>
    <!-- / slider-->
</div><!-- / sliders -->
