<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no' />
    <meta name="description" content="Responsive Shop Theme">
    <meta name="keywords" content="tienda, pesca, red, aguascalientes, caza" />
    <meta name="author" content="Assis">

    <!-- favicon -->
    <link rel="icon" href="~/favicon.png">

    <!-- page title -->
    <title>@ViewBag.Title - La Red Caza y Pesca</title>

    <!-- bootstrap css -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="https://fonts.googleapis.com/css?family=Raleway:400,500,700" rel="stylesheet">
    <link href='~/fonts/FontAwesome.otf' rel='stylesheet' type='text/css'>
    <style>
        /*Remove margin and padding from top body*/
        body {
            padding-top: 0px;
            margin-top: 0px;
        }
    </style>
</head>
<body>
    <!-- preloader -->
    <div id="preloader">
        <div class="spinner spinner-round"></div>
    </div>
    <!-- / preloader -->
    <!-- header -->
    <header>

        <!-- This menu will be hidden till we start developing the ecommerce environment -->
        <div class="top-menu top-menu">
            <div class="container">
                <p>
                    <span class="left"> <a href="#phone-number"><i class="lnr lnr-phone-handset"></i> <span> Llamanos! 01 449 918 6217</span></a></span> </span>
                    
                </p>
            </div>
        </div>

        <nav class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/"><img src="~/Assets/images/red-logo.png" alt=""></a>
                </div><!-- / navbar-header -->
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Inicio", "index", "home")</li>
                        <li>@Html.ActionLink("Sobre nosotros", "about", "home")</li>

                        <li>@Html.ActionLink("Contacto", "contacto", "home")</li>
                        <li>@Html.ActionLink("Ofertas", "offers", "home")</li>
                        <!-- Dinamyc menu -->
                        @Html.Action("menu", "home")
                    </ul>
                </div><!--/ nav-collapse -->
            </div><!-- / container -->
        </nav><!-- / navbar -->
    </header>

    
    <!-- / header -->
    <!-- content -->
    <!-- categories -->
   
    <!-- rendered body section -->
    @RenderBody()
    <!-- ends the rendered body section  -->
    <!-- footer -->
    <footer class="dark-footer">
        <div class="widget-area">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-md-4 widget">
                        <div class="about-widget">
                            <div class="widget-title-image">
                                <img id="lar-img-footer" src="~/Assets/images/red-logo.png" alt="">
                            </div>
                            <p><b>!Aventúrate a la acción</b>  con La Red Caza y Pesca.</p>
                        </div><!-- / about-widget -->
                    </div><!-- / widget -->
                    <!-- / first widget -->
                    <div class="col-sm-6 col-md-2 widget">
                       <!-- Load dinamyc brands -->
                        @Html.Action("brands","home")
                    </div><!-- / widget -->
                    <!-- / second widget -->
                    
                    <!-- / third widget -->
                    <div class="col-sm-6 col-md-4 widget">
                        <div class="widget-title">
                            <h4>Contáctanos</h4>
                        </div>
                        <div-- class="contact-widget">
                            <div class="info">
                                <p><i class="lnr lnr-map-marker"></i><span>Victoria 705, Centro, 20000 Aguascalientes, Ags.</span></p>
                            </div>
                            <div class="info">
                                <a href="tel:+0123456789"><i class="lnr lnr-phone-handset"></i><span> 01 449 918 6217</span></a>
                            </div>
                            <div class="info">
                                <a href="mailto:hello@yoursite.com"><i class="lnr lnr-envelope"></i><span>office@yoursite.com</span></a>
                            </div>
                            <!--div class="info">
                                <p class="social pull-left">
                                    <a class="no-margin" href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-google-plus"></i></a>
                                    <a href="#"><i class="fa fa-pinterest"></i></a>
                                    <a href="#"><i class="fa fa-linkedin"></i></a>
                                    <a href="#"><i class="fa fa-dribbble"></i></a>
                                </p>
                            </div-->
                        </div><!-- / contact-widget -->
                    </div><!-- / widget -->
                    <!-- / fourth widget -->
                </div><!-- / row -->
            </div><!-- / container -->
        <div class="footer-info">
            <div class="container">
                <div class="pull-left">
                    <p>&copy; @DateTime.Now.Year - <strong>La Red Caza y Pesca</strong> - Sitio desarrollado por Assis Design and Programming.</p>
                </div>
                <br />
            </div><!-- / container -->
        </div><!-- / footer-info -->
    </footer>
    <!-- / footer -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <!-- javascript -->
    <!-- featured-products carousel -->
    <script>
        $(document).ready(function () {
            $("#products-carousel").owlCarousel({
                autoPlay: 3000, //set autoPlay to 3 seconds.
                items: 4,
                itemsDesktop: [1199, 3],
                itemsDesktopSmall: [979, 3],
            });
        });
    </script>
    <!-- / featured-products carousel -->
    <!-- brands carousel -->
    <script>
        $(document).ready(function () {
            $("#brands-carousel").owlCarousel({
                autoPlay: 5000, //set autoPlay to 5 seconds.
                items: 5,
                itemsDesktop: [1199, 3],
                itemsDesktopSmall: [979, 3]
            });

        });
    </script>

</body>

</html>