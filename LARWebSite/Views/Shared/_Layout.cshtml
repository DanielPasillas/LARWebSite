<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no' />
    <meta name="description" content="Artículos de Pesca, Caza y Campismo">
    <meta name="keywords" content="tienda, pesca, red, aguascalientes, caza" />
    <meta name="author" content="Xiara Solutions">
    <!-- favicon -->
    <link rel="icon" href="~/favicon.png">
    <!-- page title -->
    <title>@ViewBag.Title | Tienda de Caza y Pesca</title>
    <!-- bootstrap css -->
    @Styles.Render("~/Content/css")
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400" rel="stylesheet">
    <!--link href='~/fonts/FontAwesome.otf' rel='stylesheet' type='text/css'-->
    <!-- Analytics -->
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-126117880-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'UA-126117880-1');
    </script>
</head>
<body>
    <!-- preloader -->
    <div id="preloader">
        <div class="spinner spinner-round"></div>
    </div>
    <!-- / preloader -->
    <!-- header -->
    <header>
        <!----------------------------->
        <!-- Starts the menu setion  -->
        <!-- Mobile Header -->
        <div class="wsmobileheader clearfix ">
            <a id="wsnavtoggle" class="wsanimated-arrow"><span></span></a>
            <span class="smllogo"><img  src="http://static.laredcazaypesca.com.mx/images/smalllogo-red.png" alt="" style="margin-left:45px;width:100px"/></span>
            <div class="wssearch clearfix">
                <i class="fa fa-search"></i>
                <i class="fa fa-times"></i>
                <div class="wssearchform clearfix">
                    @using (Html.BeginForm("search", "products", FormMethod.Get, new { @class = "topmenusearch", @id = "red-form-search" }))
                    {
                        <input type="hidden" name="page" value="1" />
                        <input placeholder="Buscar productos..." name="keywords" value="@Request.Params["keywords"]" style="min-width:100%;" autocomplete="off" class="red-search-input js-typeahead">
                    }
                </div>
            </div>
        </div>
        @if (Request.Browser.IsMobileDevice)
        {
            <br /><br /><br />
        }
        <div class="wsmainfull clearfix">
            <div class="wsmainwp clearfix">
                <div class="desktoplogo"><a href="/"><img style="width:100px;margin-top:-10px;" src="http://static.laredcazaypesca.com.mx/images/red-logo.png" alt=""></a></div>
                <div class="wssearch wssearchdesktop clearfix">
                    <i class="fa fa-search"></i>
                    <i class="fa fa-times"></i>
                    <div class="wssearchform clearfix">
                        @using (Html.BeginForm("search", "products", FormMethod.Get, new { @class = "topmenusearch", @id = "red-form-search" }))
                        {
                            <input type="hidden" name="page" value="1" />
                            <input placeholder="Buscar productos..." type="search" name="keywords" value="@Request.Params["keywords"]" style="min-width:100%;" autocomplete="off" class="red-search-input js-typeahead">
                        }
                    </div>
                </div>
                <!--Main Menu HTML Code-->
                <nav class="wsmenu clearfix">
                    <ul class="wsmenu-list">
                        <li aria-haspopup="true"><a class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")" href="/">Inicio</a></li>
                        <li aria-haspopup="true">
                            <a class="@(ViewContext.RouteData.Values["Action"].ToString() == "about" ? "active" : "")" href="@Url.Action("about", "home")">Quiénes somos</a>
                        </li>
                        <!-- Load Dynamic Menu - Gallery  -->
                        @Html.Action("menu", "home")
                        <li aria-haspopup="true">
                            <a class="@(ViewContext.RouteData.Values["Action"].ToString() == "contacto" ? "active" : "")" href="@Url.Action("contacto", "home")">Contacto</a>
                        </li>
                        <li aria-haspopup="true">
                            <a class="@(ViewContext.RouteData.Values["Action"].ToString() == "gallery" ? "active" : "")" href="@Url.Action("gallery", "home", new { page = 1, id = 1, category = "default"})">Galería</a>
                        </li>
                    </ul>
                </nav>

                <!--Menu HTML Code-->
            </div>
        </div>
        <!-- Mobile Header -->
        <!-- Ends the menu section -->
        <!----------------------------->
    </header>
    <!-- / header -->
    <!-- content -->
    <!-- categories -->
    <!-- rendered body section -->
    <div>
        @RenderBody()
    </div>
    <!-- ends the rendered body section  -->
    <!-- footer -->
    <footer class="dark-footer">
        <div class="widget-area">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-md-4 widget">
                        <div class="about-widget">
                            <div class="widget-title-image">
                                <img id="lar-img-footer" src="http://static.laredcazaypesca.com.mx/images/red-logo.png" alt="">
                            </div>
                            <p>¡Aventúrate a la acción con <b>La Red Caza y Pesca!</b></p>
                        </div><!-- / about-widget -->
                    </div><!-- / widget -->
                    <!-- / first widget -->
                    <div class="col-sm-6 col-md-2 widget">
                        <!-- Load dinamyc brands -->
                        @Html.Action("brands", "home")
                    </div><!-- / widget -->
                    <div class="col-sm-6 col-md-2 widget">
                        <!-- Load dinamyc brands -->
                        @Html.Action("categories", "home")
                    </div><!-- / widget -->
                    <!-- / second widget -->
                    <!-- / third widget -->
                    <div class="col-sm-6 col-md-4 widget">
                        <div class="widget-title">
                            <h4>Contáctanos</h4>
                        </div>
                        <div class="contact-widget">
                            <div class="info">
                                <a href="javascript:void;" class="ellipsis">Victoria 705, Centro, 20000 Aguascalientes, México</a>
                            </div>
                            <div class="info">
                                <a href="javascript:void;">449 918 6217</a>
                            </div>
                            <div class="info">
                                <a href="javascript:void;">info@laredcazaypesca.com.mx</a>
                            </div>
                            <!--div class="info">
                                <p class="social pull-left">
                                    <a class="no-margin" href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-google-plus"></i></a>
                                    <a href="#"><i class="fa fa-pinterest"></i></a>
                                    <a href="#"><i class="fa fa-linkedin"></i></a>
                                    <a href="#"><i class="fa fa-dribbble"></i></a>
                                </p>
                            </div-->
                        </div><!-- / contact-widget -->
                    </div><!-- / widget -->
                    <!-- / fourth widget -->
                </div><!-- / row -->
            </div><!-- / container -->
            <div class="footer-info">
                <div class="container">
                    <div class="pull-left">
                        <p>&copy; @DateTime.Now.Year - <strong>La Red Caza y Pesca.</strong> </p>
                        <!--small>
                            Powered by <a target="_blank" href="http://www.xiara.com.mx">Xiara</a>
                        </small-->
                    </div>
                    <br />
                </div><!-- / container -->
            </div><!-- / footer-info -->
        </div>
    </footer>
    <!-- / footer -->
    @Scripts.Render("~/bundles/jquery")
    <script>
        /* Input validation */
        (function () {
            $('.fa').on('click', function () { setTimeout(function () { $('.red-search-input').focus();},100); });
            $("#red-form-search").submit(function (e) {

                if ($(".red-search-input").val()) {
                    return true;
                }
                else {

                    e.preventDefault();
                    $(".red-search-input").focus();
                }
            });
        })();
//-----------------------------------------
    </script>
    @RenderSection("scripts", required: false)
    <!-- javascript -->

</body>
</html>